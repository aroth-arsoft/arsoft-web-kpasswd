#!/bin/sh -e
PKG=arsoft-web-kpasswd

case "$1" in
    configure|upgrade)
        # make sure django log dir exists
        [ ! -d /var/log/django ] && mkdir /var/log/django
        # ... and create the log file if it does not exist
        if [ ! -f /var/log/django/arsoft.web.ddns.log ]; then
            touch /var/log/django/arsoft.web.ddns.log
            chown www-data:www-data /var/log/django/arsoft.web.ddns.log
        fi
        ;;
esac

#DEBHELPER#

exit 0
