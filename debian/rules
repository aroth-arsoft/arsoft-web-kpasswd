#!/usr/bin/make -f

PYTHON2=$(shell pyversions -vr)

# Don't compress .py files
DEB_COMPRESS_EXCLUDE := .py

%:
	dh $@ --buildsystem=python_distutils --with=python2

override_dh_auto_install:
	python setup.py install --root=debian/arsoft-web-kpasswd --install-layout=deb
	mkdir -p debian/arsoft-web-kpasswd/usr/share/pyshared/arsoft/web/kpasswd
	ln -s /etc/arsoft/web/kpasswd/static debian/arsoft-web-kpasswd/usr/share/pyshared/arsoft/web/kpasswd/static
	ln -s /etc/arsoft/web/kpasswd/templates debian/arsoft-web-kpasswd/usr/share/pyshared/arsoft/web/kpasswd/templates

override_dh_auto_build: