    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "GUnicorn: Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/gunicorn",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "args": ["app:application",
                "--bind=0.0.0.0:8000", "--reload", "--timeout", "300",
                "--log-level", "debug",
                "--env", "BASE_PATH=/cpw",
            ],
            "envFile": "${workspaceFolder}/.env",
            //"postDebugTask": "killdebugger"
        },
        {
            "name": "Python: manage.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "runserver"
            ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "django": true
        }
    ]
}
